{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "build&debugcpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,        //now you can give input
            "MIMode": "gdb",
            "miDebuggerPath": "D:/Programs/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Włącz formatowanie kodu dla gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_cpp",
        }
    ]
}
