{
    "tasks": [
        {
            "type": "shell",
            "label": "build_cpp",
            "command": "D:/Programs/MinGW/bin/g++.exe",
            "args": [
                //"-Ofast",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}
