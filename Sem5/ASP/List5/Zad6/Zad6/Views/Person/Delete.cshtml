@model Zad6.Models.PersonModel

<h2>Delete Person</h2>

@using(var form = Html.BeginForm()) {
    <p>Are you sure you want to delete @Model.Name @Model.Surname?</p>
    <button type="submit" class="btn btn-danger">Yes</button>
    <a href="@Url.Action("Index", "Person")" class="btn btn-secondary">No</a>
}
