@{
    ViewData["Title"] = "Tic Tac Toe - Home";
}

<h1>Tic Tac Toe</h1>

@if(Context.User.Identity.IsAuthenticated == false) {
    <a href="/Account/Login">Login to your account</a>
} else {
    <p> Weclome @Context.User.Identity.Name </p>
    <br />
    <a href="/Account/GamesHistory">Games History</a>
    <br />
    <a href="/Account/Logout">Logout</a>
}

<br /> <br />

<form method="get" action="/Game/Play">
    <div>
        <label for="gameId">Game ID:</label>
        <input type="text" id="gameId" name="gameId" placeholder="Enter Game ID" required />
    </div>
    <button type="submit">Join/Create Game</button>
</form>

<br/>

<a href="/Game/ListGames">Rooms List</a>
