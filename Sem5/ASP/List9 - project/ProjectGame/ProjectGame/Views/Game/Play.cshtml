@{
    ViewData["Title"] = "Tic Tac Toe - Game";
    var gameId = ViewData["GameId"]?.ToString();
}

<h1>Tic Tac Toe - Game Room: @gameId</h1>

<div id="game-board">
    @for (int row = 0; row < 3; row++)
    {
        <div class="row">
            @for (int col = 0; col < 3; col++)
            {
                <button class="cell" data-row="@row" data-col="@col"></button>
            }
        </div>
    }
</div>

<h3>Current Player: <span id="current-player"></span></h3>
<h3>Your role: <span id="player-role"></span></h3>
<p id="game-result"></p>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
        var gameId = "@gameId";
</script>
<script src="~/js/game.js"></script>

<style>
    #game-board {
        display: grid;
        grid-template-rows: repeat(3, 1fr);
        grid-gap: 5px;
    }

    .row {
        display: flex;
    }

    .cell {
        width: 60px;
        height: 60px;
        font-size: 24px;
        text-align: center;
        line-height: 60px;
        border: 1px solid black;
        background-color: white;
        cursor: pointer;
    }
</style>
